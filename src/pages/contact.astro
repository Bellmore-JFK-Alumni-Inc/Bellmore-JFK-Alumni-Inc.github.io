---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Us',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Feel free to reach out!"
    items={[
      {
        title: 'Board & General Email',
        description: 'Mark@BellmoreJFKalumni.org',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Bellmore JFK ALumni, Inc., John F Kennedy High School, 3000 Bellmore Ave, Bellmore, NY 11710',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
